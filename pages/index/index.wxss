/* pages/index/index.wxss */
/* 全局样式 */
.indexContainer{
  width:100%;
  height:300rpx;
}
/* 轮播图样式 */
.banners image{
  width:100%;
  height:100%;
}
/* 导航样式 */
.navContainer{
  display:flex;
}
.navItem{
  display:flex;
  /* 主轴方向 */
  flex-direction: column;
  /* 侧轴对齐方式 */
  align-items:center;
  width:20%;
}
.navItem .iconfont{
  width:100rpx;
  height:100rpx;
  border-radius: 50%;
  text-align:center;
  line-height:100rpx;
  font-size:50rpx;
  background-color:rgb(240,19,19);
  color:#fff;
  margin:20rpx 0;
}
.navItem text{
  font-size:26rpx;
}

/* 推荐歌曲样式 */
.recommendContainer{
  padding:20rpx;
