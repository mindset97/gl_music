/* 推荐歌曲内容区域样式 */
.recommendScroll{
  display:flex;
  /* 限制当前歌曲内容高度，排行结构正常显示 */
  height:120px;
}
.scrollItem{
  width:200rpx;
  margin-right:20rpx;
}
.scrollItem image{
  width:200rpx;
  height:200rpx;
  border-radius: 10rpx;
}
.scrollItem text{
  font-size:26rpx;
  /* 单行文本省略 */
  /* white-space:nowrap;
  overflow:hidden;
  display:block;
  text-overflow:ellipsis; */

  /* 多行文本省略 */
  overflow:hidden;
  text-overflow:ellipsis;
  /* 变成webkit盒子 */
  display:-webkit-box;
  /* 设置纵轴对齐方式 */
  -webkit-box-orient:vertical;
  /* 设置盒子多行显示行数 */
  -webkit-line-clamp:2

}

/* 云音乐热歌榜 */
.topList{
  padding:20rpx;

}
.topListSwiper{
  height:400px;
}
.swiperItem{
  width:96%;
  background-color:#fbfbfb;
}

/* 标题样式 */
.swiperItem .title{
  font-size:30rpx;
  line-height:80rpx;
}
.musicItem .title{
  /* 目的：自己元素继承这个块元素 */
  display:flex;
  margin-bottom:20rpx;
}
.musicItem image{
  width:100rpx;
  height:100rpx;
  border-radius:6rpx;
}
.musicItem .count{
  width:100rpx;
  height:100rpx;
  line-height:100rpx;
  text-align:center;
}

.musicItem .musicName{
  height:100rpx;
  line-height:100rpx;
  max-width:400rpx;
  overflow:hidden;
  display:block;
  white-space: nowrap;
  text-overflow:ellipsis; 
}







